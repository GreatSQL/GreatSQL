CREATE TABLE sentinel (c1 int NOT NULL,
  c2 int NOT NULL,
  c3 int NOT NULL,
  c4 int DEFAULT NULL,
  c5 int DEFAULT NULL,
  PRIMARY KEY (c1,c2,c3),
  KEY c1 (c1,c2) COMMENT 'partial_group_keyparts=2;partial_group_threshold=1'
) ENGINE=ROCKSDB;

